
<%= simple_form_for(service_work, url: url, method: method) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.hidden_field :service, value: service_work.service.id %>

  <div class="form-inputs">
    <%= f.input :category, as: :select, collection: Category.all, label_method: :name, value_method: :id, include_blank: false %>
    <%= f.input :title %>
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.submit label %>
  </div>
<% end %>
