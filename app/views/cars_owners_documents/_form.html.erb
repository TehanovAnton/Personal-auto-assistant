
<%= simple_form_for(@cars_owners_document) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.hidden_field :user_id, value: @cars_owners_document.user.id %>

  <div class="form-inputs">
    <%= f.input :issue_date %>
    <%= f.input :term_of_validity %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
